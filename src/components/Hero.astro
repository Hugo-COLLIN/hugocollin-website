---
interface Props {
	title: string;
	tagline?: string;
	align?: 'start' | 'center';
}

const { align = 'center', tagline, title } = Astro.props;
---

<header class:list={['hero stack gap-4', align]}>
	<div class="stack gap-2">
    <div>
      {
        title.split('\n').map((part) => {
          return <h1 class="title centered">{part}</h1>
        })
      }
    </div>

		{tagline && <p class="tagline">{tagline}</p>}
	</div>
	<slot />
</header>

<style>
	.hero {
		font-size: var(--text-lg);
		text-align: center;
      //margin-top: 1.5em;
	}

	.title,
	.tagline {
		//max-width: 37ch;
		margin-inline: auto;
	}

	.title {
		font-size: var(--text-3xl);
		color: var(--gray-0);
	}

  .stack {
    display: flex;
  }

	@media (min-width: 50em) {
		.hero {
			font-size: var(--text-xl);
		}

		//.start {
		//	text-align: start;
		//}

		.start .title,
		.start .tagline {
			margin-inline: unset;
		}

		.title {
			font-size: var(--text-5xl);
		}

    //.centered {
    //  text-align: center;
    //}
	}
</style>
